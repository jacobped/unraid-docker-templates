<?xml version="1.0" encoding="utf-8"?>
<Containers>
<Beta>True</Beta>
<Category>Network:Proxy</Category>
  <Name>nginx-openvpnclient</Name>
  <Description>
    Nginx reverse proxy over OpenVPN-Client[br]
	[br]
    [b][u][span style='color: #E80000;']Data directory[/span][/u][/b][br]
    [b]/config[/b] This is where the container will store it's configuration files.[br]
    [b][u][span style='color: #E80000;']Logs directory[/span][/u][/b][br]
    [b]/log[/b] This is where logs from Nginx and process manager will be stored.[br]
	[br]
	[u][b]Extra parameters[/b][/u][br]
	[b]--cap-add=NET_ADMIN[/b]: Required to give access to host network stack without container being priviledged.[br]
	[b]--device=/dev/net/tun[/b]: Gives OpenVPN access to use the tun adapter.
  </Description>
  <Overview>
	Nginx reverse proxy over OpenVPN-Client.
  </Overview>
  <Support>none atm</Support>
  <Registry>https://registry.hub.docker.com/u/jacobpeddk/nginx-openvpnclient/</Registry>
  <GitHub>https://github.com/jacobped/Docker-Nginx-OpenVPNClient</GitHub>
  <Repository>jacobpeddk/nginx-openvpnclient</Repository>
  <Project>https://github.com/jacobped/Docker-Nginx-OpenVPNClient</Project>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>1470</HostPort>
        <ContainerPort>80</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Environment>
    <Variable>
      <Name>UMASK</Name>
      <Value>000</Value>
    </Variable>
    <Variable>
      <Name>PUID</Name>
      <Value>99</Value>
    </Variable>
    <Variable>
      <Name>PGID</Name>
      <Value>100</Value>
    </Variable>
  </Environment>
  <Data>
    <Volume>
      <HostDir>/mnt/cache/appdata/nginx-openvpnclient/config</HostDir>
      <ContainerDir>/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/cache/appdata/nginx-openvpnclient/log</HostDir>
      <ContainerDir>/log</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <WebUI>http://[IP]:[PORT:1470]/</WebUI>
  <Icon>https://raw.githubusercontent.com/jacobped/unraid-docker-templates/master/jacobped/images/nginx-openvpnclient-icon.png</Icon>
  <ExtraParams>--cap-add=NET_ADMIN --device=/dev/net/tun</ExtraParams>
</Containers>
